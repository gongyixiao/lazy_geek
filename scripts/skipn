#!/usr/bin/perl

##---------------------------------------------------------------------------------------##
## skipn NUMBER                                                                          ##
##---------------------------------------------------------------------------------------##
## => skip first n lines                                                                 ##
##---------------------------------------------------------------------------------------##


# read the pattern
$n = $ARGV[0];

# process 
while ($n>0) {
  $inp = <STDIN>;
  $n = $n-1;
}
while ($inp=<STDIN>) { print $inp; }

